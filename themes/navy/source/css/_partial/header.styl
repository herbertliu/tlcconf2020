header-padding-normal = 40px
header-padding-max = 30px
logo-size = 50px

#header
  position: relative
  background: #fff
  padding: header-padding-normal 0
  @media print
    display: none

#header-inner
  display: flex
  flex-flow: row nowrap
  align-items: center
  @media mq-mobile
    justify-content: center

#logo-wrap
  flex: 0 1
  margin-right: 40px
  margin-left: 30px
  @media mq-normal
    margin-right: 40px
    margin-left: 0

#logo
  hide-text()
  background: url("/mlogo.png") no-repeat
  width: 182px
  height: 26.5px
  background-size: contain
  display: block
  @media mq-normal
    background: url("/logo.png") no-repeat
    width: 459px
    height: 58px


#main-nav
  display: none
  flex: 1 auto
  @media mq-normal
    display: block

#main-nav iframe
  vertical-align: -5px;

.main-nav-link
  color: #333
  font-size: 16px
  text-decoration: none
  line-height: logo-size
  opacity: 0.7
  transition: 0.2s
  font-family: font-title
  display: inline-block
  padding: 0 20px
  &:hover
    opacity: 1
    color: color-link-hover

#buy-ticket
  display: inline-block
  .buy-ticket-link
    text-decoration: none
    color: #fff
    display: inline-block
    background: linear-gradient(90deg, #2720EA, #8800ED)
    width: 68px
    height: 30px
    padding: 0 8px
    line-height: 30px
    font-size: 12px
    border-radius: 28px
    text-align: center
    @media mq-normal
      padding: 0 33px
      border-radius: 6px
      line-height: 56px
      width:168px
      height: 56px
      font-size: 16px
      border-radius: 28px


#lang-select-wrap
  display: none
  position: relative
  @media mq-normal
    display: block

#lang-select-label
  color: #fff
  opacity: 0.7
  font-family: font-title
  line-height: logo-size
  span
    padding-left: 8px
  i
    opacity: 0.7

#lang-select
  opacity: 0
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-appearance: menulist-button
  font-size: inherit
