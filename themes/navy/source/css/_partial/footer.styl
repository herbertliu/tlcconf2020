#footer
  clearfix()
  padding: 40px 0
  color: rgba(255, 255, 255, 0.6)
  font-family: font-title
  position: relative
  background: color-navy
  text-align: center
  @media mq-normal
    text-align: left
  @media print
    display: none
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  line-height: 1.4
  @media mq-normal
    float: left
  a
    font-weight: bold

#footer-links
  margin-top: 1em
  display: none
  @media mq-normal
    float: left
    margin-top: 0
    width: 350px
    display: block
    
  .footer-subtitle
    margin-bottom: 26px    

#footer-links li 
  margin-bottom: 12px
  color: #bbb

.footer-subtitle 
  color: #fff
  font-size: 18px
  margin-bottom: 16px

.footer-link 
  position: relative
  font-size: 30px
  margin-left: 20px
  cursor: pointer
  .wechat-qrcode 
    display: none
    position: absolute
    top: -280px
    left: -86px
  .wechat-qrcode img 
    width: 200px
    border-radius: 2px

.footer-link:first-child 
  margin-left: 0

#footer-contact
  float: left
  width: 100%
  margin-bottom: 20px
  .contact .qq-group
    margin-bottom: 20px
  .qr-code img
    width: 160px
    height: 160px
  @media mq-normal
    width: 360px
    margin-bottom: 0

#footer-transport
  .location iframe
    width: 100%
    @media mq-normal    
      width: 408px